<div class="jumbotron jumbotron-fluid">
  <div class="container">    
    
    <h1 class="display-4"><img src="./assets/img/burger-512.png" alt="8bitburger">  Welcome to The BeefSteak House! </h1>
   
    
  </div>
</div>
{{!-- container for burgers --}}
<div class="container2">
  <div class="row">
    <div class=" left col-sm">
      <h2>Burger Menu:</h2>
<hr>
<ul style="list-style-type:none;">
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger_block devour=false}}
  {{/if}}
  {{/each}}
</ul>
    </div>
    <div class="right col-sm">
      <h2>Burgers Eaten:</h2>
<hr>
<ul style="list-style-type:none;">
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger_block devour=true}}
  {{/unless}}
  {{/each}}
</ul>
    </div>
  </div>
</div>
<hr>
{{!-- container for adding a burger --}}
<div class="container1">  
    <div class="col-sm">
      <h3>Add a Burger</h3>
<form class="create-form" action="api/burgers" method="POST">

  <div class="form-group">
    <label class = "name" for="bu">Burger Name:</label>
    <input class= "bName" type="text" id="bu" name="burger_name">
  </div>
  <div class="form-group">
    <label class= "name" for="slee">Eat it?</label>
    <hr>
    <input type="radio" name="eat" value="0" checked> YES!<br>
    <input  type="radio" name="eat" value="1"> NO!
  </div>

  <button type="submit" class="add">Add Burger!</button>
</form>
    </div>
</div>
