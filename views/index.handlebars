<h1>Burgers!</h1>

<h2>Burger Bucket List</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger_block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger_block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="api/burgers" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button id="add" type="submit">Add Burger</button>
</form>